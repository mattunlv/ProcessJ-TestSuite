import std.io;

public proc void Prefix(int init, 
                        chan<int>.read in,
                        chan<int>.write out) {
  int val;
  out.write (init);
  while (true) {
    val = in.read();
    out.write(val);
  }
}

public proc void Delta(chan<int>.read in,
                       chan<int>.write out1,
                       chan<int>.write out2) {
  while (true) {
    int val;
    val = in.read();
    out1.write(val);
    out2.write(val);
  }
}

public proc void Succ(chan<int>.read in, 
                      chan<int>.write out) {
  while (true) {
    int val;
    val = in.read();
    out.write(val + 1);
  }
}

public proc void Consumer(chan<int>.read in) {
  while (true) {
    int val;
    val = in.read();
    if (val % 10000 == 0)
      println(val);
  }
}

public proc void Main() {
  chan<int> a,b,c,d;
  par {
    Prefix(0, a.read, c.write);
    Delta(a.write, d.read, b.read);
    Succ(b.read, c.write, a.write);
    Consumer(d.read);
  }
}
 